{
    "compilerOptions": {
      "target": "es5", // O código JavaScript será compatível com ES5
      "module": "commonjs", // O sistema de módulos a ser usado
      "strict": true, // Ativa todas as verificações de tipo estritas
      "esModuleInterop": true, // Habilita a interoperabilidade entre CommonJS e ES Modules
      "skipLibCheck": true, // Ignora verificação de tipos de arquivos de definição (.d.ts)
      "forceConsistentCasingInFileNames": true // Força a consistência nas letras maiúsculas/minúsculas nos nomes de arquivos
    },
    "include": [
      "src/**/*" // Inclui todos os arquivos TypeScript na pasta src
    ],
    "exclude": [
      "node_modules", // Exclui a pasta node_modules
      "**/*.spec.ts" // Exclui arquivos de teste
    ]
}
  